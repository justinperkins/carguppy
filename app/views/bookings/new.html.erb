<%= form_with(model: @booking, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :timeline, "What's your timeline?", class: 'block text-sm font-medium mb-2' %>
    <%= form.select :listing_url, ['Whenever', 'Tomorrow', 'Next couple days', 'This week', 'Next week'], {}, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
  </div>
  <div class="mb-4">
    <%= form.label :name, class: 'block text-sm font-medium mb-2' %>
    <%= form.text_field :name, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
  </div>
  <div class="mb-4">
    <%= form.label :email, class: 'block text-sm font-medium mb-2' %>
    <%= form.email_field :email, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
  </div>
  <div class="mb-4">
    <%= form.label :phone, class: 'block text-sm font-medium mb-2' %>
    <%= form.text_field :phone, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
  </div>
  <div class="mb-4">
    <%= form.label :vehicle, 'Make/Model/Year', class: 'block text-sm font-medium mb-2' %>
    <%= form.text_field :vehicle, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
  </div>
  <div class="mb-4">
    <%= form.label :mileage, class: 'block text-sm font-medium mb-2' %>
    <%= form.text_field :mileage, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
  </div>
  <div class="mb-4">
    <%= form.label :location, class: 'block text-sm font-medium mb-2' %>
    <%= form.text_field :location, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
  </div>
  <div class="mb-4">
    <%= form.label :vin, 'VIN (if you have it, needed for history report)', class: 'block text-sm font-medium mb-2' %>
    <%= form.text_field :vin, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
  </div>
  <div class="mb-4">
    <%= form.label :listing_url, 'Listing URL', class: 'block text-sm font-medium mb-2' %>
    <%= form.text_field :listing_url, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
  </div>
  <div class="mb-4">
    <%= form.label :comments, 'Additional info', class: 'block text-sm font-medium mb-2' %>
    <%= form.text_area :comments, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 resize-vertical' %>
  </div>
  <div class="mb-4">
    <%= form.submit 'Book Appointment', class: 'w-full bg-blue-600 hover:bg-blue-700 font-medium py-2 px-4 rounded-md transition duration-200 cursor-pointer' %>
  </div>
<% end %>
